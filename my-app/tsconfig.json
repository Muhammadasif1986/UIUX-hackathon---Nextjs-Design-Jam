{
  "compilerOptions": {
    "target": "es2015", // Ensures compatibility with modern JavaScript features like Set
    "lib": ["dom", "dom.iterable", "esnext"], // Includes required libraries for browser and ESNext features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true, // Adds support for iteration in ES5-compatible builds
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/Menu/MenuPage.tsx"
  ],
  "exclude": ["node_modules"]
}
